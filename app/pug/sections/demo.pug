section.demo#demo
    .demo__container.container 
        h2.demo__title Demo mode
        h2.demo__description In this section you can get acquainted with the main features of the gallery
        .demo__wrapper 
            .demo__inner.demo__inner--param 
                .demo__categories.categories
                    .categories__wrapper 
                        .categories__inner 
                            .categories__title Parameters
                            .categories__param.params
                                .params__item 
                                    input(type='checkbox' name='visiblePreviews' value="true" id="visiblePreviews" class="checkbox" checked )
                                    label(for="visiblePreviews") Show thumbnails of images
                                        span (visiblePreviews)
                                .params__item 
                                    input(type='checkbox' name='pagination' value="true" id="pagination" class="checkbox" checked )
                                    label(for="pagination") Enable pagination
                                        span (pagination)
                                .params__item 
                                    input(type='checkbox' name='loop' value="true" id="loop" class="checkbox" checked )
                                    label(for="loop") Enable loop mode
                                        span (loop)
                                hr
                                .params__item 
                                    label(for="positionPreviews" class="label") Select the sides of the thumbnail arrangement:
                                        span (positionPreviews)
                                    select#positionPreviews(class='select')
                                        option(value="bottom" selected) Bottom
                                        option(value="top") Top
                                        option(value="left") Left
                                        option(value="right") Right
                                .params__item 
                                    label(for="animSlide" class="label") Animation of the slide change:
                                        span (animSlide)
                                    select#animSlide(class='select')
                                        option(value="none") none
                                        option(value="fade") fade
                                        option(value="flipInX") flipInX
                                        option(value="zoomIn") zoomIn
                                hr
                                .params__item 
                                    label(for="countPreSlides") Count of preview images 
                                        span (countPreSlides)
                                    output.params__item-count 4
                                    input(type="range" oninput="this.previousElementSibling.value = this.value" class="input" name="countPreSlides" id="countPreSlides" min="1" max="10" value="4" step='1')
                                .params__item 
                                    label(for="spaceBetween") Distance between preview images - px
                                        span (spaceBetween)
                                    output.params__item-count 6
                                    input(type="range" oninput="this.previousElementSibling.value = this.value" class="input" name="spaceBetween" id="spaceBetween" min="0" max="30" value="6" step='1')
                                .params__item 
                                    label(for="borderRadius") The options adds border radius for images - px
                                        span (borderRadius)
                                    output.params__item-count 6
                                    input(type="range" oninput="this.previousElementSibling.value = this.value" class="input" name="borderRadius" id="borderRadius" min="0" max="30" value="6" step='1')
            .demo__inner.demo__inner--demo 
                .demo__gallery.pm-gallery 
                    img(src="./images/img-small-1.svg" data-src="./images/img-large-1.svg" alt="img")
                    img(src="./images/img-small-2.svg" data-src="./images/img-large-2.svg" alt="img")
                    img(src="./images/img-small-3.svg" data-src="./images/img-large-3.svg" alt="img")
                    img(src="./images/img-small-4.svg" data-src="./images/img-large-4.svg" alt="img")
                    img(src="./images/img-small-5.svg" data-src="./images/img-large-5.svg" alt="img")
                    img(src="./images/img-small-6.svg" data-src="./images/img-large-6.svg" alt="img")
                    img(src="./images/img-small-7.svg" data-src="./images/img-large-7.svg" alt="img")
                    img(src="./images/img-small-8.svg" data-src="./images/img-large-8.svg" alt="img")
                    img(src="./images/img-small-9.svg" data-src="./images/img-large-9.svg" alt="img") 
